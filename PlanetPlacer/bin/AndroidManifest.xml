<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.planetplacer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />
<uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.planetplacer.activity.PlanetStart"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.planetplacer.activity.PlanetMenu" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="com.example.planetplacer.activity.PLANETMENU" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="com.example.planetplacer.activity.PlanetOne" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="com.example.planetplacer.activity.PLANETONE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="com.example.planetplacer.activity.PlanetTwo" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="com.example.planetplacer.activity.PLANETTWO" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="com.example.planetplacer.activity.PlanetThree" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="com.example.planetplacer.activity.PLANETTHREE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="com.example.planetplacer.activity.PlanetFour" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="com.example.planetplacer.activity.PLANETFOUR" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="com.example.planetplacer.activity.PlanetDone" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="com.example.planetplacer.activity.PLANETDONE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="com.example.planetplacer.activity.PlanetInstruction" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="com.example.planetplacer.activity.INSTRUCTIONS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="com.example.planetplacer.activity.PlanetAbout" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="com.example.planetplacer.activity.ABOUT" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="com.example.planetplacer.activity.PlanetSettingsMenu" android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="com.example.planetplacer.activity.PLANETSETTINGSMENU" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
    </application>

</manifest>
