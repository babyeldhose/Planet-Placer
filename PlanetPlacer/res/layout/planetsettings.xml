<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/groupSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/soundOnRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:checked="true"
            android:text="Sound On"
            android:textColor="@android:color/holo_green_light"
            android:textColorHint="@android:color/holo_green_light" />

        <RadioButton
            android:id="@+id/soundOffRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound Off"
            android:textColor="@android:color/holo_green_light" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/groupVibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/vibrateOnRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:checked="true"
            android:text="Vibrate Off"
            android:textColor="@android:color/holo_green_light" />

        <RadioButton
            android:id="@+id/vibrateOffRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibrate Off"
            android:textColor="@android:color/holo_green_light" />

    </RadioGroup>

<RadioGroup
    android:id="@+id/groupDev"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="40dp"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/devOnRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:checked="true"
        android:text="Dev On"
        android:textColor="@android:color/holo_green_light" />

    <RadioButton
        android:id="@+id/devOffRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dev Off"
        android:textColor="@android:color/holo_green_light" />

</RadioGroup>

<Button
    android:id="@+id/resetHigh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Clear HighScore"
    android:textColor="@android:color/holo_green_light" />

</LinearLayout>